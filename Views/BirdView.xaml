<UserControl x:Class="BirdMaker.Views.BirdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BirdMaker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Foreground="AntiqueWhite"
                   Text ="Birds Name"
                   FontSize="50"
                   TextAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0"
                    Grid.Column="0"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Can Fly"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="Yes"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="1"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Has Talons"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="Yes"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="2"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Number of Wings"
                               FontSize="30"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="2"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Beak Type"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="Normal"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Color"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="Gray"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="2"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Needs Helmet"
                               FontSize="38"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1"
                               Foreground="AntiqueWhite"
                               Text ="Yes"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
        <Button Grid.Row="2" 
                Margin ="20"
                Background="#FF7272BD"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <TextBlock Text="Save Bird"/>
        </Button>
    </Grid>
</UserControl>
