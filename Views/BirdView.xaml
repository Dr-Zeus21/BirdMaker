<UserControl x:Class="BirdMaker.Views.BirdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BirdMaker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Foreground="AntiqueWhite"
                   FontSize="50"
                   TextAlignment="Center"
                   Text="{Binding Name}"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0"
                    Grid.Column="0"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Can Fly"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <ToggleButton Grid.Row="1"
                                  Margin="20,10"
                                  IsChecked="{Binding CanFly}">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="IsChecked" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="ButtonBorder"
                                                    VerticalAlignment="Stretch"
                                                    HorizontalAlignment="Stretch"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="4"
                                                    Margin="1">
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Green"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Red"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="1"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Has Talons"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <ToggleButton Grid.Row="1"
                                  Margin="20,10"
                                  IsChecked="{Binding HasTalons}">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="IsChecked" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="ButtonBorder"
                                                    VerticalAlignment="Stretch"
                                                    HorizontalAlignment="Stretch"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="4"
                                                    Margin="1">
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Green"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Red"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="2"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Needs Helmet"
                               FontSize="38"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <ToggleButton Grid.Row="1"
                                  Margin="20,10"
                                  IsChecked="{Binding NeedsHelmet}">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="IsChecked" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="ButtonBorder"
                                                    VerticalAlignment="Stretch"
                                                    HorizontalAlignment="Stretch"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="4"
                                                    Margin="1">
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Green"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="Red"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Beak Type"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1"
                             Background="Transparent"
                             Foreground="AntiqueWhite"
                             BorderThickness="0"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="50"
                             Text="{Binding BeakType, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Color"
                               FontSize="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1"
                             Background="Transparent"
                             Foreground="AntiqueWhite"
                             BorderThickness="0"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="50"
                             Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="2"
                    Background="#FF0D0D20"
                    Margin="5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Foreground="AntiqueWhite"
                               Text ="Number of Wings"
                               FontSize="30"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1"
                             Background="Transparent"
                             Foreground="AntiqueWhite"
                             BorderThickness="0"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="50"
                             Text="{Binding NumberOfWings, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>
        </Grid>
        <Button Grid.Row="2" 
                Margin ="20"
                Background="#FF7272BD"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <TextBlock Text="Save Bird"/>
        </Button>
    </Grid>
</UserControl>
